@model IEnumerable<FurnitureShop.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h4>Customer order list</h4>

<fieldset>
    <legend>Over history</legend>
    <table>
        <tr>
            <th width="12%"></th>
            <th width="5%">OrderId
            </th>
            <th width="15%">OrderDate
            </th>
            <th width="15%">ShippingDate
            </th>
            <th width="15%">DeliveryDate
            </th>
            <th width="15%">Shipped by
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("View", "CustomerOrderProducts", new { id = item.OrderId, userid = item.UserId }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })

                </td>
                <td>
                    @item.OrderId
                </td>
                <td>
                    @String.Format("{0:dd-MM-yyyy}", item.OrderDate)
                </td>
                <td>
                    @String.Format("{0:dd-MM-yyyy}", item.ShippingDate)
                </td>
                <td>
                    @String.Format("{0:dd-MM-yyyy}", item.DeliveryDate)
                </td>
                <td>
                    @item.Orderdelivery.Methode
                </td>
            </tr>
        }

    </table>
</fieldset>
