@model IEnumerable<FurnitureShop.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            OrderDate
        </th>
        <th>
            ShippingDate
        </th>
        <th>
            DeliveryDate
        </th>
        <th>
            TrackingNumber
        </th>
        <th>
            Note
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OrderId }) |
            @Html.ActionLink("Details", "Details", new { id=item.OrderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrderId })
        </td>
        <td>
			@String.Format("{0:g}", item.OrderDate)
        </td>
        <td>
			@String.Format("{0:g}", item.ShippingDate)
        </td>
        <td>
			@String.Format("{0:g}", item.DeliveryDate)
        </td>
        <td>
			@item.TrackingNumber
        </td>
        <td>
			@item.Note
        </td>
    </tr>
}

</table>


